#!/bin/bash

# Check if an argument (theme name) is provided
if [[ -n $1 ]]; then
    case "$1" in
        "default")
            echo '\e[0;38;5;166m\u\e[0m@\e[4;38;5;231m\h\e[0m \e[6;38;5;14m\w\e[0m $(git_branch_str)\e[0m\nðŸš€ '
            ;;
        "infomax")
            echo '\e[0;38;5;166m\u\e[0m@\e[4;38;5;231m\h\e[0m \e[0;38;5;51mðŸ•— \d \t\n\e[0;38;5;51m$(random_quote)\n\e[6;38;5;14m\w\e[0m $(git_branch_str) ðŸš€ \e[0m'
            ;;
        "minimal")
            echo '\e[1;33m\u\e[0m:\e[1;36m\w\e[0m $ '
            ;;
        "colorful")
            echo '\e[1;31m\u\e[0m@\e[1;34m\h\e[0m:\e[1;36m\w\e[0m $(random_quote) ðŸŒŸ '
            ;;
        *)
            echo "Error: Unknown theme '$1'. Available themes: default, minimal, colorful."
            exit 1
            ;;
    esac
else
    echo "Usage: prompt_themes [theme_name]"
    echo "Available themes: default, minimal, colorful."
    exit 1
fi
