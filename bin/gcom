#!/bin/bash
echo -e "\e[38;5;118mAdding and committing all changes\e"
git add --all
message="$@"
push=false

if [[ "$message" =~ "-p" ]]; then
    message=$(echo "$message" | sed 's/-p//g')
    push=true
fi

if [[ "$message" =~ "'" ]]; then
    git commit -m "$message"
else
    git commit -m "'$message'"
fi

echo -e "\e[0m"

if [[ "$push" == true ]]; then
    echo -e "\e[38;5;126mPushing to remote\e"
    git push
    echo -e "\e[0m"
fi